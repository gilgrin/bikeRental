<div class="container">
  <h1>Bikes for rent</h1>
  <% @bikes.each do |bike| %>
    <div class="bike-card bg-white mt-3">
      <div class="card-img">
        <%= cl_image_tag bike.photos.first.key %>
      </div>
      <%= link_to bike_path(bike) do %>
        <div class="card-info p-5">
          <h1> <%= bike.name %> </h1>
          <p> Category <%= bike.category %> </p>
          <p> Price: $ <%= bike.price %> </p>
          <p>            
            <i class="fas fa-map-marker-alt"></i>
            Location: <%= bike.location %> 
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
